{% extends 'base.html.twig' %}

{% block title %}Blandad Kortlek{% endblock %}

{% block body %}
    <h1>Blandad Kortlek</h1>
    <div class="body-section" style="display: flex; flex-wrap: wrap; gap: 1rem;">
        {% for card in cards %}
            {% set color = (card.getSuit() == '♥' or card.getSuit() == '♦') ? 'red' : 'black' %}
            <div style="font-size: 1.5rem; padding: 0.5rem; border: 1px solid #ccc; border-radius: 6px; color: {{ color }};">
                {{ card }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
