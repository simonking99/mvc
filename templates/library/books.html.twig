{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
<h1 class="display-4 mb-4">Library</h1>

<div class="about-columns">
    <div class="about-text">
        <p class="lead">List of all the books</p>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered rounded shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                    </tr>
                </thead>
                <tbody>
                    {% for book in books %}
                        <tr>
                            <td>
                                <a href="{{ path('library_show', { id: book.id }) }}">
                                    {{ book.title }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="1">No books found in the library.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
