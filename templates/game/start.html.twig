{% extends 'base.html.twig' %}

{% block title %}Game 21 - Start{% endblock %}

{% block body %}
<h1>Game 21 - Blackjack</h1>

<div class="game-container">
    <h2>Your Hand</h2>
    <p>{{ playerHand | join(', ') }}</p>
    <p>Score: {{ playerScore }}</p>


<div>
    <h2>Dealer's Hand</h2>
    <p>{{ dealerHand | join(', ') }}</p>
    <p>Score: {{ dealerScore }}</p>
</div>

{% if winner %}
    <h3>{{ winner }}</h3>
{% endif %}
</div>

<div class="action-section">
    {% if winner %}
        <h3 class="winner">{{ winner }}</h3>
    {% else %}
        {% if not game.isGameOver() %}
            <a href="{{ path('game_deal') }}" class="btn btn-primary">Draw a Card</a>
            <a href="{{ path('game_stand') }}" class="btn btn-secondary">Stand</a>
        {% endif %}
    {% endif %}
</div>

<div class="restart-section">
    <form method="post" action="{{ path('game_reset') }}">
        <button type="submit" class="btn btn-danger">Restart Game</button>
    </form>
</div>
{% endblock %}

