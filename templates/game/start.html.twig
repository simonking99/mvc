{% extends 'base.html.twig' %}

{% block title %}Game 21 - Blackjack{% endblock %}

{% block body %}
<h1 class="game-title">Game 21 - Blackjack</h1>

<div class="game-container">
    <div class="player-section">
        <h2>Your Hand</h2>
        <p class="cards">{{ playerHand | join(', ') }}</p>
        <p class="score">Player Score: <strong>{{ playerScore }}</strong></p>
    </div>

    <div class="dealer-section">
        <h2>Dealer's Hand</h2>
        <p class="cards">{{ dealerHand | join(', ') }}</p>
        <p class="score">Dealer Score: <strong>{{ dealerScore }}</strong></p>
    </div>
</div>

<div class="action-section">
    {% if winner %}
        <h3 class="winner">{{ winner }}</h3>
    {% else %}
        {% if not game.isGameOver() %}
            <a href="{{ path('game_deal') }}" class="btn btn-primary">Draw a Card</a>
            <a href="{{ path('game_stand') }}" class="btn btn-secondary">Stand</a>
        {% endif %}
    {% endif %}
</div>

<div class="restart-section">
    <form method="post" action="{{ path('game_reset') }}">
        <button type="submit" class="btn btn-danger">Restart Game</button>
    </form>
</div>
{% endblock %}